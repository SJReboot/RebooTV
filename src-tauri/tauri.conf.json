{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run start",
    "devUrl": "http://localhost:4200",
    "frontendDist": "../dist/rebootv"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "identifier": "com.rebootv.app",
  "productName": "rebootv",
  "version": "1.0.0",
  "plugins": {
    "shell": {
      "open": true,
      "sidecar": true
    }
  },
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPDATA/**/*",
          "$RESOURCE/**/*"
        ]
      }
    }
  }
}
